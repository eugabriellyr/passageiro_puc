<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2A2A"
    tools:context=".ui.activity.premio_bonus.PremioBonusActivity">

    <LinearLayout
        android:id="@+id/lnrInviteFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/invite_friend_top_bg"
        android:backgroundTint="#fff"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="-1dp"
                    android:gravity="center"
                    android:text="CANC-P | CANC-M  |  VALIDAS  |  CORRIDAS  "
                    android:textColor="#000000"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/canc_p"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/canc_m"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/validas"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#FF9800"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/corridas"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#4CAF50"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8BC34A"
            app:layout_constraintTop_toBottomOf="@+id/lnrInviteFriend"
            tools:ignore="MissingConstraints" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtpassageiro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="@string/txtbp" />

                <TextView
                    android:id="@+id/txtmotorista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="Cancelamento Motorista" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtpassageiroc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textStyle="bold"
                    android:textColor="#FD0000"
                    android:textSize="12dp"
                    android:text="@string/txtbp" />

                <TextView
                    android:id="@+id/txtmotoristac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    android:textSize="12dp"
                    android:text="Cancelamento Motorista" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="404dp"
        android:layout_height="349dp"
        android:orientation="vertical"
        android:layout_marginVertical="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnrInviteFriend"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtaviso"
            android:layout_width="380dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/botaoregistro"
            android:fontFamily="@font/clanpro_morza"
            android:gravity="center"
            android:text="Carregando aguarde..."
            android:textColor="#5A5A5A"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lblprimeirameta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:src="@drawable/cadeado"

                />

            <TextView
                android:id="@+id/primeirameta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="22dp"
                android:text="1º META DE 50 CORRIDAS"
                android:textColor="#fff"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lblprimeirametacodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:src="@drawable/cadeadodes"

                />

            <TextView
                android:id="@+id/primeirametacodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="22dp"
                android:text="1º META DE 40 CORRIDAS"
                android:textColor="#FFEB3B"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lblsegundameta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:src="@drawable/cadeado"

                />

            <TextView
                android:id="@+id/segundameta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="22dp"
                android:text="2º META DE 70 CORRIDAS"
                android:textColor="#fff"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lblsegundametacodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:src="@drawable/cadeadodes"

                />

            <TextView
                android:id="@+id/segundametacodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="22dp"
                android:text="2º META DE 70 CORRIDAS"
                android:textColor="#FFEB3B"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lblterceirameta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:src="@drawable/cadeado"

                />

            <TextView
                android:id="@+id/terceirameta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="22dp"
                android:text="3º META DE 110 CORRIDAS"
                android:textColor="#fff"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lblterceirametacodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:src="@drawable/cadeadodes"

                />

            <TextView
                android:id="@+id/terceirametacodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="1dp"
                android:layout_marginVertical="22dp"
                android:text="3º META DE 110 CORRIDAS"
                android:textColor="#FFEB3B"
                android:textSize="18dp" />


        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>