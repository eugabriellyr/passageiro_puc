<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#403E3E"
    tools:context=".ui.activity.convide_ganhe.ConvideActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_grey_round_border"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="20dp"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/invite_friend"
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_weight="2"
                android:fontFamily="@font/clanpro_book"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_16"
                tools:text="carregando..." />

            <TextView
                android:id="@+id/referral_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:gravity="center|start"
                android:maxLines="2"
                android:text="@string/referral_amount"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="Seu Codigo de indicação"
            android:textSize="@dimen/text_18" />

        <Button
            android:id="@+id/calculadora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="46dp"
            android:background="#7e59c0"
            android:visibility="gone"
            android:text="Simular Ganhos de indicação"
            android:textColor="#ffff" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrInviteFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/invite_friend_referral_bg"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="131dp"
            android:layout_height="86dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/indicar"
                tools:ignore="UseAppTint" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Indique e Ganhe!" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="183dp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="METAS PARA ATINGIR =" />

                    <TextView
                        android:id="@+id/valor"
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/clanpro_book"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        tools:text="0" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="183dp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="PAGO POR CORRIDA =" />

                    <TextView
                        android:id="@+id/pg"
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/clanpro_book"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        tools:text="0" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlReferral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnrInviteFriend">

        <Button
            android:id="@+id/share"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="287dp"
            android:layout_marginEnd="46dp"
            android:background="@color/colorPrimaryDark"
            android:text="COMPARTILHA CÓDIGO"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/lnrReferralCode"
            android:layout_width="wrap_content"
            android:layout_height="206dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="21dp"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:padding="15dp">


            <TextView
                android:id="@+id/referral_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:padding="40dp"
                android:textColor="#fff"
                android:textSize="58dp"
                tools:text="COD" />

        </LinearLayout>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>