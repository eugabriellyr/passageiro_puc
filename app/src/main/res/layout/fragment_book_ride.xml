        <LinearLayout
            android:id="@+id/lblmudar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/clanpro_narrnews"
                android:text="@string/estimated_payment"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/estimated_payment_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:fontFamily="@font/clanpro_narrnews"
                android:maxLines="1"
                android:text="@string/cash"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/tv_change"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_grey_round_border"
                android:layout_weight="1.2"
                android:fontFamily="@font/clanpro_medium"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/change"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#fff"
            android:background="@drawable/button_round_status_opened"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:paddingStart="-7dp"
                android:paddingEnd="0dp">

                <CheckBox
                    android:id="@+id/use_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/clanpro_narrnews"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Usar Carteira      "
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/wallet_balance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R$ 0.00"
                    android:gravity="end"
                    android:fontFamily="@font/clanpro_narrnews"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_12" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lblportamalas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#F6F5F5"
            android:visibility="gone"
            android:background="@drawable/button_round_status_opened"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:paddingStart="-7dp"
                android:paddingEnd="0dp">

                <CheckBox
                    android:id="@+id/add_porta_malas"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/clanpro_narrnews"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/add_portamalas"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/valor_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="R$ 0.00"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_12"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingStart="-7dp"
                android:paddingEnd="0dp">

                <CheckBox
                    android:id="@+id/add_pet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:fontFamily="@font/clanpro_narrnews"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/add_pet"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/valor_addP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/clanpro_narrnews"
                    android:text="R$ 0.00"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_12" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/schedule_ride"
                android:textStyle="bold"
                android:visibility="gone"
                style="@style/MyButton.Primary"
                android:text="@string/schedule_ride" />

            <Button
                android:id="@+id/ride_now"
                android:textColor="@color/white"
                android:textStyle="bold"
                style="@style/MyButton.Primary"
                android:text="@string/ride_now" />





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical"
            android:paddingStart="-7dp"
            android:paddingEnd="0dp">

            <TextView
                android:id="@+id/bloqueado"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_grey_round_border"
                android:gravity="center"
                android:lines="5"
                android:text="@string/bloq"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/pg"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/button_round_accent"
                android:text="Pagar agora"
                android:textColor="@color/white" />



        </LinearLayout>

    </LinearLayout>

</LinearLayout>