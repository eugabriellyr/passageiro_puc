<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".ui.activity.Educacao_SaudeActivity">


    <ImageView

        android:id="@+id/logo"
        android:layout_width="291dp"
        android:layout_height="148dp"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/_25sdp"
        android:src="@drawable/logo"
        android:tint="#0B0000"
        android:visibility="visible"
        tools:ignore="UseAppTint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="184dp"
            android:layout_margin="@dimen/_30sdp"
            android:text="@string/educatxt"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:layout_width="284dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/proximo"
                    style="@style/MyButton.Accent"
                    android:layout_above="@+id/sign_in_btn"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/botaoregistro"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:singleLine="true"
                    android:text="Quero Participar"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:text="" />
    </LinearLayout>



</LinearLayout>


