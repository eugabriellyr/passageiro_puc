<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#403E3E"
    tools:context=".ui.educacao_saude.EducacaoSaudeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/completeData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="@dimen/_7sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_7sdp"
                android:paddingTop="@dimen/_7sdp"
                android:paddingEnd="@dimen/_7sdp"
                android:text="ATENÇÃO! COMPLETE SEU CADASTRO."
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="#fff"
            android:textSize="@dimen/_13sdp"
            android:textAlignment="center"
            android:text="@string/txt_doc" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture"
            android:layout_width="130dp"
            android:layout_height="119dp"
            android:layout_margin="12dp"
            android:transitionName="picture"
            app:srcCompat="@drawable/educ" />

        <Button
            android:id="@+id/save"
            style="@style/MyButton.Primary"
            android:layout_margin="12dp"
            android:padding="8dp"
            android:text="@string/enviar"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/status_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="#fff"
            android:textSize="@dimen/_12sdp"
            android:text="CARREGANDO..." />

        <TextView
            android:id="@+id/txt_educ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_grey_round_border"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="#009688"
            android:textSize="@dimen/_12sdp"
            android:text="CARREGANDO..." />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>