<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#403E3E"
    tools:context=".ui.adiciona_favorito.AddFavActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingEnd="0dp"
                android:text="Adicionar Motorista"
                android:textSize="@dimen/_18sdp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/completeData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="@dimen/_7sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_7sdp"
                android:paddingTop="@dimen/_7sdp"
                android:paddingEnd="@dimen/_7sdp"
                android:text="ATENÇÃO! COMPLETE SEU CADASTRO."
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_30sdp"
                android:layout_margin="@dimen/_21sdp"
                android:textColor="#ACABAB"
                android:text="@string/add_txt_fav" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/fav"
                    android:layout_width="87dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_grey_round_border"
                    android:fontFamily="@font/clanpro_narrnews"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="#000000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/favnome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:fontFamily="@font/clanpro_narrnews"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/white"
                    android:textColorHint="#FFC107"
                    android:textSize="22dp" />
            </LinearLayout>


            <view
                class="androidx.appcompat.widget.ActionMenuView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark"/>




        </LinearLayout>


        <Button
            android:id="@+id/save"
            style="@style/MyButton.Primary"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:padding="8dp"
            android:text="@string/save"
            android:textColor="@color/white" />




    </LinearLayout>

</androidx.core.widget.NestedScrollView>