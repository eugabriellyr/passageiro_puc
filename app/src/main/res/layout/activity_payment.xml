<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#403E3E"
    android:orientation="vertical"
    tools:context=".ui.activity.payment.PaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llCashContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">






            <TextView
                android:id="@+id/cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawableStart="@drawable/ic_money"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:singleLine="true"
                android:text="@string/by_cash"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/credit_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawableStart="@drawable/ic_card"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:singleLine="true"
                android:text="@string/credit_card"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_14"
                android:visibility="gone" />

            <TextView
                android:id="@+id/debit_machine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawableStart="@drawable/ic_debit_machine"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:singleLine="true"
                android:text= "@string/debit_machine"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"
                android:visibility="visible" />

            <TextView
                android:id="@+id/pic_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawableStart="@drawable/picpay"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:singleLine="true"
                android:text="Picpay"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"
                android:visibility="visible" />

            <TextView
                android:id="@+id/pix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawableTint="#00BCD4"
                android:drawableStart="@drawable/pix"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:singleLine="true"
                android:text=" Pix"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"
                android:visibility="visible" />


            <TextView
                android:id="@+id/mercado_pago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:drawableStart="@drawable/mp"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:singleLine="true"
                android:text="Mercado Pago"
                android:textColor="@color/white"
