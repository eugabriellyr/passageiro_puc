<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#403E3E"
    tools:context=".ui.activity.libera.LiberaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/carrega"
                android:layout_width="130dp"
                android:layout_height="119dp"
                android:layout_margin="12dp"
                android:background="@drawable/bg_grey_round_border"
                android:transitionName="frente"
                app:srcCompat="@drawable/educ" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:layout_marginVertical="@dimen/_15sdp"
                android:text="@string/txt_libera"
                android:textColor="#BFBFBF"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/completeData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="@dimen/_7sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_7sdp"
                android:paddingTop="@dimen/_7sdp"
                android:paddingEnd="@dimen/_7sdp"
                android:text="ATENÇÃO! COMPLETE SEU CADASTRO."
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_1sdp"
            android:background="@drawable/botaolink">


            <LinearLayout
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/frente"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/bg_grey_round_border"
                    android:transitionName="frente"
                    app:srcCompat="@drawable/educ" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FRENTE"
                    android:textAlignment="center"
                    android:textColor="#BAB9B8"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/save"
                    style="@style/MyButton.Primary"
                    android:layout_width="127dp"
                    android:layout_margin="50dp"
                    android:text="@string/enviar"
                    android:textColor="@color/white" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_1sdp"
            android:background="@drawable/botaolink">


            <LinearLayout
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/verso"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/bg_grey_round_border"
                    android:transitionName="verso"
                    app:srcCompat="@drawable/educ" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VERSO"
                    android:textAlignment="center"
                    android:textColor="#BAB9B8"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/saves"
                    style="@style/MyButton.Primary"
                    android:layout_width="127dp"
                    android:layout_margin="50dp"
                    android:text="@string/enviar"
                    android:textColor="@color/white" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/txt_educ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="#fff"
            android:visibility="gone"
            android:textSize="@dimen/_14sdp"
            android:text="CARREGANDO..." />

        <TextView
            android:id="@+id/status_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:textColor="#4CAF50"
            android:textSize="@dimen/_12sdp"
            android:text="CARREGANDO..." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>